[alias]
	br = branch
	b = rebase
	ch = cherry-pick
	cl = clone
	commit = commit -v
	fo = show --format=fuller
	h = show --format=oneline
	k = checkout
	kp = checkout -
	l = log --decorate --graph
	lf = log --format=fuller
	loc = log --format='%h' --abbrev-commit
	lod = log --format='%h %aD %s' --abbrev-commit
	lo = log --format=oneline --abbrev-commit
	ls = ls-files
	m = merge
	o = show
	p = cherry-pick
	pf = push --force-with-lease
	pl = pull
	ps = push
	rb = rebase
	redo = commit --amend -C HEAD
	rh = reset --hard
	rhu = reset --hard @{u}
	r = reset
	s = stash
[push]
	default = current
[core]
	excludesfile = ~/.gitignore
[pull]
	rebase = true
